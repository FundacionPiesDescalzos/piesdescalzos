<td>
	<% if user.name.present? %>
	  <h5><%= link_to user.name, user %></h5>
	<% else %>
		<h5><%= link_to user.email, user %></h5>
	<% end %>
</td>
<td class="inliner">
  <%= form_for(user) do |f| %>
<div class="row">
	<div class="large-4 columns">
		<%= f.label :name, "Nombre:" %>
		<%= f.text_field :name, autofocus: true, placeholder: "Nombre" %>
		<%= f.label :role, "Rol:" %>
		<%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
	</div>
	<div class="large-4 columns">
		<%= f.label :name, "Correo:" %>
		<%= f.text_field :email, placeholder: "Email" %>
	</div>
	<div class="large-4 columns">
		<%= f.submit 'Actualizar', :class => 'button success round' %>
	</div>
	</div>
  <% end %>
</td>
<td>
	<br />
  <%= link_to("Borrar", user_path(user), :data => { :confirm => "Â¿Seguro quieres borrar este usuario?" }, :method => :delete, :class => 'small button alert round') unless user == current_user %>
</td>
