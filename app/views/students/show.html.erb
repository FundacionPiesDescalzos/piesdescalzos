<div class="breadcrumb">
  <h4 class="whitetxt">Consultar estudiante</h4>
</div>
<div class="search-field">
      <%= form_tag visitors_path, :method => 'get', class: "rounded" do %>
      <div class="row collapse">
          <div class="small-10 columns">
            <%= search_field_tag :search, params[:search], placeholder: "Buscar por identificación nombre o apellido" %>
            <label for="instituciones" class="ib">Instituciones: </label>
            <%= select_tag "instituciones", options_from_collection_for_select(@schools, "id", "name", params[:instituciones]), include_blank: "Todas" %>
          </div>
          <div class="small-2 columns">
            <%= button_tag(type: "submit", :name => nil, class: "button success postfix") do %>
                <h6><%= fa_icon "search" %> Buscar</h6>
            <% end %>
          </div>
      </div>
      <% end %>
</div>

<div class="back_link">
  <%= link_to visitors_path do %>
    <%= fa_icon "arrow-left" %> <span class="italic">Regresar</span>
  <% end %>
</div>

<div class="student-banner">
  <div class="pic">
    <%= image_tag "nino.jpg" %>
  </div>
  <div class="student-info">
    <!-- TO-DO: esto no se ve bien porque personalizaste todos los h4 -->
    <h4 class="whitetxt"><%= @student.name %></h4>
    <h5 class="italic nospace"><%= @student.the_school %></h5>
    <h5 class="subheader nospace">Curso  <%= @student.last_course %></h5>
    <h5 class="subheader nospace"><%= fa_icon "map-marker" %> <%= @student.residency_state %></h5>
  </div>
</div>


<ul class="tabs vertical" data-tab>
  <li class="tab-title active"><a href="#panel1">Datos basicos</a><span class="edit_tabs"><a href="" data-reveal-id="basicos"> <%= fa_icon "pencil" %> </a></span></li>
   <% if @student.guardian.present? %>
	  <li class="tab-title"><a href="#panel2">Acudiente</a></li>
  <% end %>
  <li class="tab-title"><a href="#panel3">Afiliación en salud</a></li>
  <li class="tab-title"><a href="#panel4">Datos escolares</a></li>
  <li class="tab-title"><a href="#panel5">Seguimiento nutricional</a></li>
</ul>

<div class="tabs-content extended-tabs">
  <div class="content active" id="panel1">
    <ul class="no-bullet equal">
      <li><span class="labeling"><%= fa_icon "phone" %> Tipo de indetificación:</span> <%= @student.id_type %></li>
	  <hr />
      <li><span class="labeling"><%= fa_icon "phone" %> Genero </span> <%= @student.gender %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Dirección </span> <%= @student.address %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Años desescolarizado:</span> <%= @student.outschool_years > 0 ? @student.outschool_years : "Ninguno" %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> indetificación </span> <%= @student.identification %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Fecha de nacimiento:</span> <%= @student.born %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Etnia </span> <%= @student.etnic %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Lugar </span> <%= @student.villa %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Lugar de nacimiento:</span> <%= @student.born_state %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Desplazado </span> <%= @student.displaced? ? "SI" : "NO" %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Area </span> <%= @student.zone %></li>
      <li><span class="labeling"><%= fa_icon "phone" %> Tutor </span> <%= @student.guardian.present? ? @student.name : "no tiene registrado" %></li>
    </ul>
  </div> <!-- /tab 1 -->
  <% if @student.guardian.present? %>
  <div class="content" id="panel2">
      <ul class="no-bullet">
        <li><b>Nombre:</b> <%= @student.guardian.name %></li>
        <li><b>Apellido:</b> <%= @student.guardian.last_name %></li>
      </ul>
   </div> <!-- /tabs 2 -->
  <% end %>
  <div class="content" id="panel3">
    <p>This is the third panel of the basic tab example. This is the third panel of the basic tab example.</p>
  </div>
  <div class="content" id="panel4">
    <p>This is the fourth panel of the basic tab example. This is the fourth panel of the basic tab example.</p>
  </div>
  <div class="content" id="panel5">
    <p>This is the fourth panel of the basic tab example. This is the fourth panel of the basic tab example.</p>
  </div>
</div>

<div id="basicos" class="reveal-modal nospace small radius" data-reveal aria-labelledby="Datos_basicos" aria-hidden="true" role="dialog">
  <div class="modal-header">
  	<h5 class="whitetxt nospace">Datos básicos</h5>
  </div>
  
  <div class="modal-content">
	  <% @gender = ["femenino", "masculino"] %>
  	<% @ti = ["TI", "RC"] %>
  	<%= simple_form_for(@student) do |f| %>
  	  <%= f.error_notification %>
  	
  	  <div class="form-inputs">
  	    <%= f.input :name %>
  	    <%= f.input :id_type, collection: @ti, prompt: "Escoger uno", label: "Tipo de identificación" %>
  	    <%= f.input :gender, collection: @gender, prompt: "Escoger un genero" %>
  	    <%= f.input :address %>
  	    <%= f.input :last_course %>
  	    <%= f.input :outschool_years %>
  	    <%= f.input :identification %>
  	    <%= f.input :born %>
  	    <%= f.input :etnic %>
  	    <%= f.input :villa %>
  	    <%= f.input :born_state, required: true, label: "Ciudad de nacimiento", collection: @ciudades, as: :grouped_select, group_method: :last, prompt: "Escoge una"  %>
  	    <%= f.input :displaced %>
  	    <%= f.input :residency_state, required: true,  label: "Ciudad de residencia", collection: @ciudades, as: :grouped_select, group_method: :last, prompt: "Escoge una"  %>
  	    <%= f.input :zone %>
  	    <%= f.association :guardian %>
  	    <%= f.association :school %>
  	  </div>
  	
  	  <div class="form-actions">
  	    <%= f.button :submit %>
  	  </div>
  	<% end %>
  	</div>
  
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

