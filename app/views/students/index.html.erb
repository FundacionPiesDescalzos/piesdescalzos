<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Id type</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Last course</th>
      <th>Outschool years</th>
      <th>Identification</th>
      <th>Born</th>
      <th>Etnic</th>
      <th>Villa</th>
      <th>Born state</th>
      <th>Displaced</th>
      <th>Residency state</th>
      <th>Zone</th>
      <th>Guardian</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.id_type %></td>
        <td><%= student.gender %></td>
        <td><%= student.address %></td>
        <td><%= student.last_course %></td>
        <td><%= student.outschool_years %></td>
        <td><%= student.identification %></td>
        <td><%= student.born %></td>
        <td><%= student.etnic %></td>
        <td><%= student.villa %></td>
        <td><%= student.born_state %></td>
        <td><%= student.displaced %></td>
        <td><%= student.residency_state %></td>
        <td><%= student.zone %></td>
        <td><%= student.guardian %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

