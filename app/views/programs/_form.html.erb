<br /><br />
<div class="row">
	<div class="large-7 columns large-centered">
		<div class="text-center">
			<%= simple_form_for(@program) do |f| %>
			  <h5 class="text-center">Creación de programa</h5>
			  <%= f.error_notification %>
			  <div class="form-inputs">
				<%= f.input :line, label: "Escoge la linea del programa", collection: GeneralInfo.lines, prompt: "Escoger uno" %>
			    <%= f.input :name, label: "Nombre del programa" %>
			    <%= f.input :description, label: "Descripción del programa" %>
			  </div>
	
			  <div class="form-actions">
			    <%= f.button :submit, "Siguiente paso", class: "button success round" %>
			  </div>
			<% end %>
		</div>	
	</div>
</div>