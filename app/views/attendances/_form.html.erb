<%= simple_form_for(@attendance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :identification %>
    <%= f.input :period %>
    <%= f.input :went_days %>
    <%= f.input :skip_days %>
    <%= f.input :reason %>
    <%= f.association :student %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
