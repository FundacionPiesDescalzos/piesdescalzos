<p id="notice"><%= notice %></p>

<h1>Listing Establishments</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Department</th>
      <th>State</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @establishments.each do |establishment| %>
      <tr>
        <td><%= establishment.code %></td>
        <td><%= establishment.name %></td>
        <td><%= establishment.department %></td>
        <td><%= establishment.state %></td>
        <td><%= establishment.phone %></td>
        <td><%= establishment.email %></td>
        <td><%= link_to 'Show', establishment %></td>
        <td><%= link_to 'Edit', edit_establishment_path(establishment) %></td>
        <td><%= link_to 'Destroy', establishment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Establishment', new_establishment_path %>
<%= link_to "descargar CSV", establishments_path(format: "csv") %>


<h2>Importar establecimientos</h2>
<%= form_tag import_establishments_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar", :class => "button" %>
<% end %>
