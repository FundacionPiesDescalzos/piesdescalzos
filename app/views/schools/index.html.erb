<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Address</th>
      <th>Neighborhood</th>
      <th>Zone</th>
      <th>Contact name</th>
      <th>Contact position</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Headquarter</th>
      <th>Foundation present</th>
      <th>Establishment</th>
      <th>Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.code %></td>
        <td><%= school.name %></td>
        <td><%= school.address %></td>
        <td><%= school.neighborhood %></td>
        <td><%= school.zone %></td>
        <td><%= school.contact_name %></td>
        <td><%= school.contact_position %></td>
        <td><%= school.phone %></td>
        <td><%= school.email %></td>
        <td><%= school.headquarter %></td>
        <td><%= school.foundation_present %></td>
        <td><%= school.establishment.present? ? school.establishment.name : "sin establecimiento" %></td>
        <td>
          <% school.students.each do |student| %>
          <%= student.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

